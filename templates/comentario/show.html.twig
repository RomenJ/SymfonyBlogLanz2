{% extends 'base.html.twig' %}

{% block title %}Comentario{% endblock %}

{% block body %}
    <h1>Comentario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comentario.id }}</td>
            </tr>
            <tr>
                <th>Creadate</th>
                <td>{{ comentario.creadate ? comentario.creadate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Oculto</th>
                <td>{{ comentario.oculto ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ comentario.texto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comentario_index') }}">back to list</a>

    <a href="{{ path('app_comentario_edit', {'id': comentario.id}) }}">edit</a>

    {{ include('comentario/_delete_form.html.twig') }}
{% endblock %}
